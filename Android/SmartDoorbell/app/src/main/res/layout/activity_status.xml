<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:layout_margin="5dp" >

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ACTIVITY AT HOME"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ff00c685" />

    <TextView
        android:id="@+id/bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/header"
        android:layout_marginTop="23dp"
        android:text="Bedroom"
        android:textSize="20sp"
        android:textColor="#0099FF" />

    <ImageView
        android:id="@+id/bedroom_status"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:src="@drawable/button_inactive"
        android:layout_alignTop="@id/bedroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/bedroom">
    </ImageView>

    <TextView
        android:id="@+id/livingroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living Room"
        android:textColor="#0099FF"
        android:layout_below="@id/bedroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/livingroom_status"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:src="@drawable/button_inactive"
        android:layout_below="@+id/bedroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/livingroom"
        android:layout_alignBottom="@id/livingroom">
    </ImageView>

    <TextView
        android:id="@+id/kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen"
        android:textColor="#0099FF"
        android:layout_below="@id/livingroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/kitchen_status"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:src="@drawable/button_inactive"
        android:layout_below="@+id/bedroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/kitchen"
        android:layout_alignBottom="@id/kitchen">
    </ImageView>

</RelativeLayout>